# Disable optional native dependencies
optional=false

# Use legacy peer deps for better compatibility
legacy-peer-deps=true

# Set Python path for Alpine
python=/usr/bin/python3

# Increase network timeout
fetch-timeout=300000

# Increase maxsockets
maxsockets=50

# Cache settings
cache=.npm-cache

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit=false
fund=false 