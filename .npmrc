# Use legacy peer deps for better compatibility
legacy-peer-deps=true

# Prevent optional native module resolution
omit=optional

# Force JS-only builds for Rollup
rollup-js-only=true

# Disable Rollup native modules
ROLLUP_NO_NATIVE=1

# Increase network timeout
fetch-timeout=300000

# Increase maxsockets
maxsockets=50

# Cache settings
cache=.npm-cache

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit=false
fund=false 